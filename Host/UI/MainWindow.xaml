<Window
    x:Class="Host.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Host.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Host"
    Width="200"
    Height="300"
    d:DataContext="{d:DesignInstance d:Type=local:MainViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Margin="5"
            Command="{Binding StartService}"
            Content="Start service" />
        <Button
            Grid.Row="1"
            Margin="5"
            Command="{Binding StopService}"
            Content="Stop service" />
    </Grid>
</Window>
